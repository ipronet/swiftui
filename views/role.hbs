<div class="row">
  <div class="col s12">
    <div class="page-title">ROLE SETTINGS</div>
  </div>

  <div class="col s12 m12 l12">
    <div class="card">
      <div class="card-content">
        <div class="row">
          <div class="col s12">
            <ul class="tabs tab-demo z-depth-1" style="width: 100%;">
              <li class="tab col s3"><a href="#test1" class="">Update a Role</a></li>
            </ul>
          </div>

          <div id="test1" class="col s12">
            <div class="row"></div>

            <form id="example-form" action="#">
              {{#each list}}
              <div>

                <section>
                  <div class="wizard-content">

                    <div class="col s4"></div>

                    <div class="col s4">

                      <div class="card">
                        <div class="card-content">

                          
                            
                            <div class="row">
                              <div class="input-field col s12">
                                <input
                                  value={{title}}
                                  id="role_title"
                                  type="text"
                                  class="validate"
                                  name="role_title"
                                  placeholder="Enter Role Title"
                                />
                                <label for="role_title">Role Title</label>
                              </div>
                            </div>

                          <input
                      type="hidden"
                      id="role_id"
                      name="role_id"
                      value={{id}}
                    />
                        </div></div>
                      <div class="row"></div>
                      <div class="row"></div>
                      {{! <div class="row"></div> }}
                      <div class="row">
                        <div class="col s3"></div>
                        <button
                          class="waves-effect waves-light btn"
                          type="button"
                          id="update_role"
                        >Update Role</button>
                      </div>

                    </div>

                  </div>

                </section>

              </div>
              {{/each}}
            </form>
          </div>

        </div>

      </div>

    </div>
  </div>
</div>

