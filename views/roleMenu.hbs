<div class="row">
  <div class="col s12">
    <div class="page-title">ROLE-MENU SETTINGS</div>
  </div>
  <div class="col s12 m12 l12">
    <div class="card">
      <div class="card-content">
        <div class="col s12">
          <ul class="tabs tab-demo z-depth-1" style="width: 100%;">
            <li class="tab col s3"><a href="#test1" class="">Menu List</a></li>
          </ul>
        </div>
        <form>

          <div class="row">

            <div class="col s12 m12 l4">

              <div class="row"></div>
              <div class="row">
                <div class="input-field col s12">
                  <input
                    style="margin-top: 2px;"
                    value={{roletitle}}
                    id="role_title"
                    type="text"
                    class="validate"
                    disabled
                    name="role_title"
                    placeholder="Enter Print Path"
                  />
                  <label for="role_title">Role Title</label>
                </div>
                <input
                  type="hidden"
                  id="rolemenu_id"
                  name="rolemenu_id"
                  value={{roleid}}
                />
              </div>

            </div>

            <div class="col s12 m12 l4">

              <div class="row"></div>
              <div class="row">
                <div class="input-field col m12">

                  <select id="menu_id" class="required validate">
                    <option value="" disabled selected>Choose a menu</option>
                    {{#each list1}}
                      <option value={{id}}>{{title}}
                      </option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <input
                type="hidden"
                id="role_id"
                name="role_id"
                value={{roleid}}
              />

            </div>

            <div class="col m3 s12 center-align">
              <div class="row"></div>
              <div class="row"></div>
              <button
                class="waves-effect waves-light btn"
                type="button"
                id="create_role_submenu"
              >Create Role Menu</button>
              {{! <img
                src="../../images/folder.jpg"
                class="m-b-lg"
                alt=""
                width="90%"
              />
              <p class="grey-text center-align">-</p> }}

            </div>

          </div>

          {{!-- <div class="row">
            {{! <div class="col s5"></div> }}
            <button
              class="waves-effect waves-light btn"
              type="button"
              name="add_path"
              id="add_path"
            >Save Settings</button>
          </div> --}}

        </form>
        {{! <div class="row"></div> }}
        <table id="example" class="display responsive-table datatable-example">
          <thead>
            <tr>

              <th>Id</th>
              <th>Menu Title</th>
              <th>Status</th>
              <th>Action</th>

            </tr>
          </thead>
          {{! <tfoot>
            <tr>
              <th>Name</th>
              <th>Position</th>
              <th>Office</th>
              <th>Age</th>
              <th>Start date</th>
              <th>Salary</th>
            </tr>
          </tfoot> }}

          <tbody>
            {{#each list}}
              <tr>

                <td>{{menuid}}</td>
                <td>{{title}}</td>
                {{#if rolemenustatus}}
                  <td>Active
                  </td>
                {{else}}
                  <td>Inactive
                  </td>
                {{/if}}
                {{#if rolemenustatus}}
                  <td style="display: flex; align-items: center; width: auto;">

                    <button
                      style="outline: none; border: none; display:flex; align-items: center; justify-content:center; margin-right:1rem; "
                      id="delete"
                      onClick="update_rolemenu_statusactive({{rolemenuid}})"
                      type="button"
                    >
                      <i style="color: #26A69A;" class="material-icons">edit</i>
                    </button>

                    <button
                      style="outline: none; border: none; display:flex; align-items: center; justify-content:center; "
                      id="delete"
                      onClick="delete_role_menu_click({{rolemenuid}})"
                      type="button"
                    >
                      <i
                        style="color: #c91414;"
                        class="material-icons"
                      >delete</i>
                    </button>

                  </td>
                {{else}}
                  <td style="display: flex; align-items: center; width: auto; ">

                    <button
                      style="outline: none; border: none; display:flex; align-items: center; justify-content:center; margin-right:1rem; "
                      id="delete"
                      onClick="update_rolemenu_statusinactive({{rolemenuid}})"
                      type="button"
                    >
                      <i style="color: #26A69A;" class="material-icons">edit</i>
                    </button>

                    <button
                      style="outline: none; border: none; display:flex; align-items: center; justify-content:center; "
                      id="delete"
                      onClick="delete_role_menu_click({{rolemenuid}})"
                      type="button"
                    >
                      <i
                        style="color: #c91414;"
                        class="material-icons"
                      >delete</i>
                    </button>

                  </td>
                {{/if}}

              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>