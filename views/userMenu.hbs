<div class="row">
  <div class="col s12">
    <div class="page-title">USER-MENU SETTINGS</div>
  </div>
  <div class="col s12 m12 l12">
    <div class="card">
      <div class="card-content">
        <div class="col s12">
          <ul class="tabs tab-demo z-depth-1" style="width: 100%;">
            <li class="tab col s3"><a href="#test1" class="">Menu List</a></li>
          </ul>
        </div>
        <form>

          <div class="row">

            <div class="col s12 m12 l4">

              <div class="row"></div>
              <div class="row">
                <div class="input-field col s12">
                  <input
                    style="margin-top: 2px;"
                    value={{user}}
                    id="user"
                    type="text"
                    class="validate"
                    disabled
                    name="user"
                    placeholder="Enter Print Path"
                  />
                  <label for="user">Username</label>
                </div>
              </div>

            </div>

            <div class="col s12 m12 l4">

              <div class="row"></div>
              <div class="row">
                <div class="input-field col m12">

                  <select id="menu_id" class="required validate">
                    <option value="" disabled selected>Choose a menu</option>
                    {{#each list1}}
                      <option value={{id}}>{{title}}
                      </option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <input
                type="hidden"
                id="user_id"
                name="user_id"
                value={{userID}}
              />

            </div>

            <div class="col m3 s12 center-align">
              <div class="row"></div>
              <div class="row"></div>
              <button
                class="waves-effect waves-light btn"
                type="button"
                id="create_user_submenu"
              >Create User Menu</button>
              {{! <img
                src="../../images/folder.jpg"
                class="m-b-lg"
                alt=""
                width="90%"
              />
              <p class="grey-text center-align">-</p> }}

            </div>

          </div>

