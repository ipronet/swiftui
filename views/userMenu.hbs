                    >
                      <i
                        style="color: #c91414;"
                        class="material-icons"
                      >delete</i>
                    </button>
                  {{!-- </form> --}}
                    
                  </a>
                  
                  </td>
                <td>{{menuid}}</td>
                <td>{{title}}</td>
                {{#if usermenustatus}}
                  <td>
                    <div style="display: flex; align-items: center; width: 60%; justify-content: space-between;">
                      Active
                    <button
                      style="outline: none; border: none; display:flex; align-items: center; justify-content:center; "
                      id="delete" onClick="update_useemenu_statusactive({{usermenuid}})" type="button"
                    >
                      <i
                        style="color: #26A69A;"
                        class="material-icons"
                      >edit</i>
                    </button>
                    </div>
                  </td>

                {{else}}
                  <td>
                    <div style="display: flex; align-items: center; width: 60%; justify-content: space-between;">
                      Inactive 
                    <button
                      style="outline: none; border: none; display:flex; align-items: center; justify-content:center; "
                      id="delete" onClick="update_useemenu_statusinactive({{usermenuid}})" type="button"
                    >
                      <i
                        style="color: #26A69A;"
                        class="material-icons"
                      >edit</i>
                    </button>
                    </div>
                  </td>
                {{/if}}

                {{#if accessType}}
